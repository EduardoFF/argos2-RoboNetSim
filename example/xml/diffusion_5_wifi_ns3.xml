<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="1000"
                ticks_per_second="10"
                random_seed="0" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <footbot_diffusion_controller id="fdc"
                                  library="build/controllers/footbot_diffusion/libfootbot_diffusion.so">
      <actuators>
	<wifi implementation="extern" />
        <footbot_wheels implementation="default" />
        <footbot_leds   implementation="default" />
      </actuators>
      <sensors>
	<wifi implementation="extern" />
        <footbot_proximity implementation="rot_z_only" show_rays="true" calibrate="true" />
      </sensors>
      <parameters alpha="7.5" delta="0.001" velocity="10" interval="10" generators="0.4" />
    </footbot_diffusion_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 1">

    <box id="wall_north"
         position="2.5,5,0"
         orientation="0,0,0"
         size="5,0.1,0.5"
         movable="false" />
    <box id="wall_south"
         position="2.5,0,0"
         orientation="0,0,0"
         size="5,0.1,0.5"
         movable="false" />
    <box id="wall_east"
         position="5,2.5,0"
         orientation="0,0,0"
         size="0.1,5,0.5"
         movable="false" />
    <box id="wall_west"
         position="0,2.5,0"
         orientation="0,0,0"
         size="0.1,5,0.5"
         movable="false" />

<!--    <box id="wall_north"
         position="25,50,0"
         orientation="0,0,0"
         size="50,0.1,0.5"
         movable="false" />
    <box id="wall_south"
         position="25,0,0"
         orientation="0,0,0"
         size="50,0.1,0.5"
         movable="false" />
    <box id="wall_east"
         position="50,25,0"
         orientation="0,0,0"
         size="0.1,50,0.5"
         movable="false" />
    <box id="wall_west"
         position="0,25,0"
         orientation="0,0,0"
         size="0.1,50,0.5"
         movable="false" /> -->

    <!--
        You can distribute entities randomly. Here, we distribute
        the entities in this way:
        - the position is uniformly distributed
        on the ground, in the square whose corners are (-1,-1) and (1,1)
        - the orientations are non-zero only when rotating around Z and chosen
        from a gaussian distribution, whose mean is zero degrees and
        standard deviation is 360 degrees.
    -->
    <distribute>
      <position method="uniform" min="0,0,0" max="5,5,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="5" max_trials="100">
        <foot-bot id="fb"
                  controller="fdc" />
      </entity>
    </distribute>

   <wifi-medium id="wm" />
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ************************************ -->
  <!-- * Arena -> Physics Engines mapping * -->
  <!-- ************************************ -->
  <arena_physics>
    <engine id="dyn2d">
      <!--
          You can use a regular expression to bind a set of entities.
          See 'man 3 regex' to know more about regular expressions.
      -->
      <entity id="fb_[[:digit:]]*" />
      <entity id="wall_north" />
      <entity id="wall_south" />
      <entity id="wall_east" />
      <entity id="wall_west" />
    </engine>
  </arena_physics>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qtopengl_render splash="false">
	<camera>
		<placement idx="0" position="0,0,1" look_at="0,0,0" />
		<placement idx="1" position="5,0,1" look_at="5,0,0" />
		<placement idx="2" position="0,5,1" look_at="0,5,0" />
		<placement idx="3" position="5,5,1" look_at="5,5,0" />
	</camera>
    </qtopengl_render>  
  </visualization>

</argos-configuration>
